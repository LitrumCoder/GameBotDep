run = ["sh", "-c", "dotnet run"]
entrypoint = "Program.cs"

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "dotnet run"]
deploymentTarget = "cloudrun"

[languages.csharp]
pattern = "**/*.cs"

[languages.csharp.languageServer]
start = ["omnisharp", "--languageserver"]

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[languages]
csharp = "8.0" 